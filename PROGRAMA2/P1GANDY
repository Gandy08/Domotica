import time
import random

LDR_PIN = 1
LED_PIN = 14

GPIO.setmode(GPIO.BCM)
GPIO.setup(LED_PIN, GPIO.OUT)
GPIO.setup(LDR_PIN, GPIO.IN)
umbralLuz = 500
def leer_sensor_ldr():
return random.randint(0)
try:
while True:
valorLDR = leer_sensor_ldr()
print("Valor del sensor LDR:", valorLDR)

if valorLDR < umbralLuz:
GPIO.output(LED_PIN, GPIO.HIGH)
print("Es de noche, el LED está encendido.")
else:
GPIO.output(LED_PIN, GPIO.LOW)
print("Es de día, el LED está apagado.")
time.sleep(1)
finally:
    GPIO.cleanup()
